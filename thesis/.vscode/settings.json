{
  "latex-workshop.latex.recipes": [
    {
      "name": "wi2",
      "tools": [
        "ptex2pdf"
      ]
    },
    {
      "name": "ptex2pdf",
      "tools": [
        "ptex2pdf",
        "pbibtex",
        "ptex2pdf",
        "ptex2pdf"
      ]
    }
  ],
  "latex-workshop.latex.tools": [
    {
      "name": "latexmk",
      "command": "latexmk",
      "args": [
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "-pdf",
        "%DOC%"
      ]
    },
    {
      "name": "ptex2pdf",
      "command": "ptex2pdf",
      "args": [
        "-l",
        "-ot",
        "-kanji=utf8 -synctex=1",
        "%DOC%"
      ]
    },
    {
      "name": "pbibtex",
      "command": "pbibtex",
      "args": [
        "%DOCFILE%",
        "-kanji=utf8"
      ]
    }
  ],
  "latex-workshop.view.pdf.viewer": "tab",
  "editor.renderControlCharacters": true,
}